  <script type="text/javascript">
  
  var app = angular.module('myApp', []);
  app.run(function($rootScope){
      $rootScope.Current = -1;
      $rootScope.Timestamp = -1;
      $rootScope.Slave1 = -1;
      $rootScope.Slave2 = -1;
      $rootScope.Slave3 = -1;
      $rootScope.Slave4 = -1;
      $rootScope.Slave5 = -1;
      $rootScope.Slave6 = -1;
      $rootScope.Slave7 = -1;
      $rootScope.Slave8 = -1;
  });
  
  app.controller('myCtrl', function($scope, $rootScope, $http, $timeout) {
      
      $scope.getData = function(){
          $http.get("http://10.128.16.13:5000/ActualValues")
          .then(function(response) {
              $rootScope.Current = response.data["Current"];
              $rootScope.Timestamp = response.data["Timestamp"];
              $rootScope.Slave1 = response.data["MVoltage"];
              $rootScope.Slave2 = response.data["Sl1Voltage"];
              $rootScope.Slave3 = response.data["Sl2Voltage"];
              $rootScope.Slave4 = response.data["Sl3Voltage"];
              $rootScope.Slave5 = response.data["Sl4Voltage"];
              $rootScope.Slave6 = response.data["Sl5Voltage"];
              $rootScope.Slave7 = response.data["Sl6Voltage"];
              $rootScope.Slave8 = response.data["Sl7Voltage"];
              console.log(response.data["Current"]);
          });
      };
      $scope.intervalFunction = function(){
          $timeout(function(){
              $scope.getData();
              $scope.intervalFunction();
          }, 1000)
      };
      $scope.intervalFunction();
  });
  
  app.directive('draw', ['$timeout', function(timer, $rootScope){
      return {
          restrict: 'A',
          scope: true,
          link: function postLink(scope, element, attrs){
              function test(element){
                  var canvas = newCanvas(element);
                  var bat1 = addBat(canvas);
                  bat1 = scale(bat1, 1.5)
                  var text = canvas.text(scope.$root.Current.toString())
                  centerOnCanvasText(canvas, text)
                  console.log(canvas.parent().id);
                  centerOnCanvas(canvas, bat1);
                  scope.$root.$watch('Current', function(newVal, oldVal){
                    console.log(newVal)
                    text.text(scope.$root.Current.toString())
                    centerOnCanvasText(canvas, text)
                  });
              }
            timer(test(element[0]), 0);
            }
          };
  }]);
  
  </script>


